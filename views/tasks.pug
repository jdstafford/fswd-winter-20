extends ./layout

block bodyContents
    if username
        h1 Tasks for #{username}
    else
        h1 Tasks
    ul
        each task in tasks
            unless task.isCompleted()
                li
                    form(method="POST" action="/tasks/" + task.id + "/complete")
                        = task.name
                        | &nbsp;
                        button(title="Complete") Complete!

    form(method="POST" action="/tasks")
        input(type="text" name="name")
